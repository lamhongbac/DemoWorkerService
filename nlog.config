<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  internalLogLevel="Info"
	  internalLogFile="E:\Temp\Debug.txt">
	<!--"${basedir}\Log\applog${shortdate}.log"-->
	<extensions>
		<add assembly="Nlog.Web.AspNetCore" />
	</extensions>
	<targets>
		<target name="logfile" xsi:type="File" fileName="E:\Temp\Debug.txt" />
	</targets>

	<rules>
		<logger name="DemoWorkerService.*" minlevel="Info" maxlevel="Error" final="true"  writeTo="logfile"/>
		<logger name="*" minlevel="Info" writeTo="logfile" />
		<logger name="*" minlevel="Trace" writeTo="logfile" />
	</rules>
</nlog>