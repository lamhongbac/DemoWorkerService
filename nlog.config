<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  internalLogLevel="Info"
	  internalLogFile="E:\Temp\Debug.txt">
	
	<!--"${basedir}\Log\applog${shortdate}.log"-->
	<extensions>
		<add assembly="Nlog.Web.AspNetCore" />
	</extensions>
	<targets>	
		<target name="logfile" xsi:type="File" fileName="${basedir}\Log\applog${shortdate}.log" />
		<target name="logconsole" xsi:type="Console" />
	</targets>

	<rules>
		<logger name="*" minlevel="Info" maxlevel="Error" final="true"  writeTo="logfile"/>				
	</rules>
</nlog>